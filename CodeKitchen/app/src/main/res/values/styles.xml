<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance.DesignerNewsTile" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeightHint">20sp</item>
        <item name="font">roboto-mono-regular</item>
    </style>

    <style name="Widget.CodeKitchen" parent="android:Widget" />

    <style name="Widget.CodeKitchen.DesignerNewsTile">
        <item name="android:textAppearance">@style/TextAppearance.DesignerNewsTile</item>
    </style>

    <style name="Widget.CodeKitchen.EmptyText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="lineHeightHint">24sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.TileSecondary" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="Widget.CodeKitchen.TileSecondary">
        <item name="android:textAppearance">@style/TextAppearance.TileSecondary</item>
    </style>

    <style name="CodeKitchenDarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <style name="SearchViewTheme" parent="CodeKitchenDarkOverlay">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.CodeKitchen.SearchView</item>
    </style>

    <style name="Widget.CodeKitchen.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@null</item>
        <item name="android:searchHintIcon">@null</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="ExpandedFabTheme" parent="@android:style/ThemeOverlay.Material.Light">
        <item name="android:textColorPrimary">@color/dark_icon</item>
        <item name="android:textColorPrimaryDisableOnly">@color/dark_icon</item>
        <item name="android:colorControlActivated">@color/dark_icon</item>
    </style>

</resources>
